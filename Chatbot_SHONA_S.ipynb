      "source": [
        "#Another Function\n",
        "def real(xtext): \n",
        "  if \"name\" in xtext: \n",
        "        ytext = \"what's your name?\"\n",
        "  elif \"weather\" in xtext: \n",
        "        ytext = \"what's today's weather?\"\n",
        "  elif \"how are\" in xtext: \n",
        "        ytext = \"how are you?\"\n",
        "  elif \"what are\" in xtext: \n",
        "        ytext = \"what are you doing?\"\n",
        "  else:\n",
        "        ytext = \"\"\n",
        "  return ytext"
      ]
    },
    {
      "cell_type": "code",
