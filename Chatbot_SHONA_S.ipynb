      "source": [
        "#Creating a Function Response\n",
        "import random\n",
        "def res(message):\n",
        "  if message in resp: \n",
        "    bot286_message = random.choice(resp[message])\n",
        "  else: \n",
        "    bot286_message = random.choice(resp[\"default\"])\n",
        "  return bot286_message"
      ]
    },
